<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.javen.mapping.VideoMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.javen.model.Video">
        <id column="video_id" property="videoId" />
        <result column="user_id" property="userId" />
        <result column="face_url" property="faceUrl" />
        <result column="description" property="description" />
        <result column="upload_time" property="uploadTime" />
        <result column="url" property="url" />
        <result column="star" property="star" />
        <result column="type" property="type" />
        <result column="status" property="status" />
        <result column="name" property="name" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        video_id, user_id, face_url, description, upload_time, url, star, type, status,name
    </sql>
    <update id="givestar">
        update video set star=star+1 where video_id=#{videoId}
    </update>
</mapper>
